<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanniwa.king.admin.mapper.SysMenuMapper">
    <resultMap id="BaseResultMap" type="com.wanniwa.king.admin.entity.SysMenu">
        <!--@mbg.generated-->
        <!--@Table sys_menu-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="permission" jdbcType="VARCHAR" property="permission"/>
        <result column="path" jdbcType="VARCHAR" property="path"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
        <result column="parent_ids" jdbcType="VARCHAR" property="parentIds"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="component" jdbcType="VARCHAR" property="component"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="keep_alive" jdbcType="CHAR" property="keepAlive"/>
        <result column="type" jdbcType="TINYINT" property="type"/>
        <result column="del_flag" jdbcType="BIT" property="delFlag"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, `name`, permission, `path`, parent_id, parent_ids, icon, component, sort, keep_alive,
        `type`, del_flag, create_time, update_time
    </sql>
    <select id="findMenuByRoleId" resultMap="BaseResultMap">
        select m.*
        from sys_menu m, sys_role_menu rm
        where m.id = rm.menu_id and m.del_flag = 0
        and rm.role_id = #{roleId}
        ORDER BY m.sort DESC
    </select>
    <select id="findPermissionsByRoleIds" resultType="java.lang.String">
        SELECT
        distinct m.permission
        FROM
        sys_menu m, sys_role_menu rm WHERE m.id = rm.menu_id AND m.del_flag = 0 AND rm.role_id IN (#{roleIds})
    </select>
</mapper>
